<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pronuntiapp.activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonContinueAsParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:drawableLeft="@drawable/icon_supervisor"
            android:text="@string/continue_as_parent"
            android:layout_marginBottom="15dp"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/buttonContinueAsPatient"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:drawableLeft="@drawable/icon_child_80"
            android:text="@string/continue_as_patient"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
</ScrollView>