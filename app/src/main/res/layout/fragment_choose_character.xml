<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nesetdChooseCharacter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/naturelandscape">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:shadowColor="@color/black"
            android:shadowRadius="20"
            android:text="@string/change_character_txt"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="#4CAF50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/patient_Points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:shadowColor="@color/black"
                    android:shadowRadius="20"
                    android:drawablePadding="5dp"
                    android:text="@string/change_character_txt"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:drawableEndCompat="@drawable/icon_currency" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:background="@color/characters_prices_bg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical">
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/hero_1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/hero_1" />
                            <TextView
                                android:id="@+id/txtPriceHero1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:drawablePadding="2dp"
                                android:text="@string/app_name"
                                android:textColor="@color/white"
                                app:drawableEndCompat="@drawable/icon_currency" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/characters_prices_bg"
                            android:layout_margin="10dp"
                            android:orientation="vertical">
                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/hero_2"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_margin="10dp"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                app:lottie_rawRes="@raw/hero_2" />
                            <TextView
                                android:id="@+id/txtPriceHero2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:drawablePadding="2dp"
                                android:textColor="@color/white"
                                android:text="@string/app_name"
                                app:drawableEndCompat="@drawable/icon_currency" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/characters_prices_bg"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/hero_3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/hero_3" />
                    <TextView
                        android:id="@+id/txtPriceHero3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:textColor="@color/white"
                        android:drawablePadding="2dp"
                        android:text="@string/app_name"
                        app:drawableEndCompat="@drawable/icon_currency" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>