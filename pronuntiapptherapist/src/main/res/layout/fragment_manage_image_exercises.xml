<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerImageExercises"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pronuntiapptherapist.fragments.image.ManageImageExercisesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/txtLand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="@string/image_exercises_land_text"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <GridView
            android:id="@+id/gridViewExercises"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:nestedScrollingEnabled="true"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:layout_margin="10dp"
            android:verticalSpacing="10dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/buttonAddExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_exercise"
            android:layout_margin="20dp"
            android:layout_gravity="center" />
    </LinearLayout>
</FrameLayout>